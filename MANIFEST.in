# Include documentation and metadata files
include README.md
include LICENSE
include NOTICE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include pyproject.toml
include setup.py

# Include configuration files
include .readthedocs.yml
include Makefile

# Include all Python type stubs
recursive-include krl_models *.pyi py.typed
recursive-include krl_core *.pyi py.typed

# Include documentation source files
recursive-include docs *.rst
recursive-include docs *.md
recursive-include docs *.py
recursive-include docs Makefile
recursive-include docs *.txt

# Include examples
recursive-include examples *.py
recursive-include examples *.ipynb
recursive-include examples *.md
recursive-include examples/data *.csv

# Include tests (for source distribution)
recursive-include tests *.py
recursive-include tests *.json
recursive-include tests *.csv

# Exclude development and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude .git*
global-exclude *.swp
global-exclude *.swo

# Exclude development directories
prune .git
prune .github
prune htmlcov
prune .pytest_cache
prune .mypy_cache
prune .ruff_cache
prune .venv
prune venv
prune build
prune dist
prune *.egg-info
